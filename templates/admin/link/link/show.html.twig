{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fiche {{ link.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title text-center">Fiche {{ link.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ link.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ link.slug }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ link.link }}</td>
            </tr>
            <tr>
                <th>Statue</th>
                <td>{{ link.statue ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('link_index') }}" class="btn btn-outline-primary btn-block">Retour à la liste</a>

        <a href="{{ path('link_edit', {'id': link.id}) }}" class="btn btn-warning btn-block  mt-3">Éditer</a>

        {{ include('admin/link/link/_delete_form.html.twig') }}
    </div>
{% endblock %}
