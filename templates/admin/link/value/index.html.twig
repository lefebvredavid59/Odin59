{% extends 'base.html.twig' %}

{% block title %}Value index{% endblock %}

{% block body %}
    <h1>Value index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for value in values %}
            <tr>
                <td>{{ value.id }}</td>
                <td>{{ value.picture }}</td>
                <td>{{ value.name }}</td>
                <td>{{ value.slug }}</td>
                <td>
                    <a href="{{ path('value_show', {'id': value.id}) }}">show</a>
                    <a href="{{ path('value_edit', {'id': value.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('value_new') }}">Create new</a>
{% endblock %}
