{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fiche {{ value.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title text-center">Fiche {{ value.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ value.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ value.picture }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ value.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ value.slug }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('value_index') }}" class="btn btn-outline-primary btn-block">Retour à la liste</a>

        <a href="{{ path('value_edit', {'id': value.id}) }}" class="btn btn-warning btn-block  mt-3">Éditer</a>

        {{ include('admin/link/value/_delete_form.html.twig') }}
    </div>
{% endblock %}
