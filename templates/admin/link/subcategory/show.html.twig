{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fiche {{ subcategory.name }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="page-title text-center">Fiche {{ subcategory.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subcategory.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ subcategory.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ subcategory.slug }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ subcategory.logo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('subcategory_index') }}" class="btn btn-outline-primary btn-block">Retour à la liste</a>

    <a href="{{ path('subcategory_edit', {'id': subcategory.id}) }}" class="btn btn-warning btn-block  mt-3">Éditer</a>

    {{ include('admin/link/subcategory/_delete_form.html.twig') }}
</div>
{% endblock %}
