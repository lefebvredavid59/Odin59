{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Liste catégorie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css"
          href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.23/af-2.3.5/b-1.6.5/b-colvis-1.6.5/
          b-flash-1.6.5/b-html5-1.6.5/b-print-1.6.5/fc-3.3.2/fh-3.1.8/r-2.2.7/rg-1.1.2/rr-1.2.7/sb-1.0.1/sp-1.2.2/
          sl-1.3.1/datatables.min.css"/>
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="page-title text-center">Liste catégorie</h1>

    <a class="btn btn-outline-info btn-block mb-4" href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>

    <table class="table" id="listeCategory">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Slug</th>
                <th>Logo</th>
                <th>Voir</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.logo }}</td>
                <td><a href="{{ path('category_show', {'id': category.id}) }}">Voir</a></td>
                <td><a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript"
            src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.23/af-2.3.5/b-1.6.5/b-colvis-1.6.5/b-flash-1.6.5/b-html5-1.6.5/b-print-1.6.5/fc-3.3.2/fh-3.1.8/r-2.2.7/rg-1.1.2/rr-1.2.7/sb-1.0.1/sp-1.2.2/sl-1.3.1/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#listeCategory').DataTable();
        });
    </script>

{% endblock %}
