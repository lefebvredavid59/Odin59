{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fiche {{ support.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title text-center">Fiche {{ support.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ support.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ support.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ support.slug }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ support.link }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('support_index') }}" class="btn btn-outline-primary btn-block">Retour à la liste</a>

        <a href="{{ path('support_edit', {'id': support.id}) }}" class="btn btn-warning btn-block  mt-3">Éditer</a>

        {{ include('admin/site/support/_delete_form.html.twig') }}
    </div>
{% endblock %}
