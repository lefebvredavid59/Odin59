{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Fiche {{ user.pseudo }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title text-center">Fiche {{ user.pseudo }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Lastconnection</th>
                <td>{{ user.lastconnection ? user.lastconnection|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Registrationdate</th>
                <td>{{ user.registrationdate ? user.registrationdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('user_index') }}" class="btn btn-outline-primary btn-block">Retour à la liste</a>

        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-block  mt-3">Éditer</a>

        {{ include('admin/site/user/_delete_form.html.twig') }}

    </div>
{% endblock %}
