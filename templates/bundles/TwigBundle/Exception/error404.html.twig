{% extends 'bundles/base_error.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/error404.css') }}">
{% endblock %}

{% block title %}{{ parent() }} 404{% endblock %}

{% block body %}
    <div class="container">
        <div class="row content text-dark">
            <div class="col-lg-12"></div>
            <div class="col-lg-12">
                <h1>404</h1>
                <h2>Oups, la page que vous recherchez n'existe pas.</h2>
                <p>
                    Vous voudrez peut-être retourner à la page d'accueil.
                </p>
                <a href="{{ path('index') }}" class="btn">RENTRER À LA MAISON</a>
            </div>
        </div>
    </div>
    <div class="bg-img"></div>
{% endblock %}