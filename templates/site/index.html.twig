{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for cate in cates %}
                {% if cate.subcategory is not empty %}
                    <div class="col-12 col-md-6">
                        <h1 class="page-title text-center"><i class="{{ cate.logo }}"></i> {{ cate.name }}</h1>
                        <div class="row justify-content-center">
                            {% for sub in cate.subcategory %}
                                {% if sub.link is not empty %}
                                    <div class="col-12 col-md-6 mb-4">
                                        <div class="card shadow border-0">
                                            <div class="card-body text-center">
                                                <div class="row align-items-center">
                                                    <div class="col-3 text-center">
                                                        <i class="{{ sub.logo }} fa-2x mb-0"></i>
                                                    </div>
                                                    <div class="col">
                                                        <p class="small text-muted mb-0">{{ sub.name }}</p>
                                                        <span class="h3 mb-0">{{ sub.link.count }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
