{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ name_sub.name }}{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">
                <div class="row justify-content-center">
                    {% for value in values %}
                            <a class="btn btn-light rounded ml-2 mt-2" href="{{ path('link_value',
                                {'c_slug': name_sub.slug, 'slug': value.slug }
                            ) }}">
                                <img class="cryptoImg" src="{{ asset('uploads/values/' ~ value.picture ) }}"
                                     alt="Logo {{ value.name }}">
                            </a>
                    {% endfor %}
                </div>

                <table class="table table-hover mt-4">
                    <thead>
                    <tr>
                        <th>Statue</th>
                        <th>Name</th>
                        <th>Lien</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for link in links %}
                        <tr>
                            {% if link.statue == true %}
                                <td class="bg-success-light">Paye</td>
                            {% else %}
                                <td class="bg-warning-lighter">TEST</td>
                            {% endif %}
                            <td>{{ link.name }}</td>
                            <td><a href="{{ link.link }}" target="_blank"
                                   class="btn btn-sm btn-success btn-block">Claim</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div> <!-- .row -->
    </div>

{% endblock %}
